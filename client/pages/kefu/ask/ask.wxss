     width: 100%;
     display: flex;
 }
 .footer-btn{
     flex-grow: 1;
     border-right: 1rpx solid #969696;
     text-align: center;
     font-size: 32rpx;
     line-height: 99rpx;
     color: #787878;
 }
 .footer-btn:last-child{
     border: none;
 }