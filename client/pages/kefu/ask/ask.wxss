 /*头像  */
 .headImg{
     width: 92rpx;
     height: 92rpx;
     position: absolute;
     top: 0;
 }
 .head-name{
     position: absolute;
     top: -46rpx;
     font-size: 26rpx;
     color: #787878;
 }
 .others{
     margin-top: 70rpx;
     padding: 0 30rpx;
     position: relative;
 }
 .box{
     position: relative;
     display: inline-block;
     max-width: 430rpx;
     padding: 14rpx 17rpx 22rpx 25rpx;
     border-radius: 5rpx;
     background-color: #fff;
     line-height: 45rpx;
     font-size: 28rpx;
     color: #7c7c7c;
     margin-left: 130rpx;
 }
  .talk-wrap-other::before{
    position: absolute;
    right: 100%;
    top: 10rpx;
    content: '';
    border-top: 8rpx solid transparent;
    border-bottom: 8rpx solid transparent;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid #fff;
 }
 /*底部信息  */
 .footer{
     height: 100rpx;
     border-top: 1px solid #969696;
     background: #fff;
     position: fixed;
