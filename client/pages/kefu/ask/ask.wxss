     background: #fff;
 }
 .sub-btn::after{
    border: none;
    border-top: 2rpx solid #d0d0d0;
 }
 /*历史题问信息  */
 .ask-wrap{
     width: 690rpx;
     background: #fff;
     margin: 0 auto;
