page{
    background: #262c49;
}
view{
    box-sizing: border-box;
}
/* 头部日期信息 */
 .header{
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
    font-size: 24rpx;
    color: #fff;
    border-bottom: 1rpx solid #00163e;
 }
 /*用户提问和自动回复  */
 .id-card{
     color: #fff;
     font-size: 22rpx;
     display: flex;
 }
 .card{
     flex-grow: 1;
     text-align: center;
     height: 140rpx;
     padding-top: 34rpx;
 }
 .card-icon{
     width: 44rpx;
     height: 41rpx;
 }
 /*列表内容  */
 .content-wrap{
     padding: 0 40rpx;
     color: #fff;
     font-size: 32rpx;
 }
 .user-ask{
     padding: 28rpx 20rpx 38rpx;
     width: 670rpx;
     background: #2d3958;
     border-radius: 3rpx;
     line-height: 70rpx;
     margin-top: 30rpx;
     position: relative;
 }
 .ask-status{
     font-size: 16rpx;
     text-align: center;
     line-height: 74rpx;
     width: 78rpx;
     height: 76rpx;
     border: 1rpx solid #fff;
     border-radius: 50%;
     position: absolute;
     right: 35rpx;
     top: 120rpx;
     transform: rotate(25deg);
 }
 .ask-status-complete{
     opacity: 0.5;
 }
  /*头像  */
 .headImg{
     width: 92rpx;
     height: 92rpx;
     position: absolute;
     top: 0;
 }
 /*对话框  */
 .others{
     margin-top: 70rpx;
     padding: 0 30rpx;
     position: relative;
 }
 .own{
     margin: 70rpx 0 30rpx;
     text-align: right;
     padding-right: 125rpx;
     position: relative;
 }

 .box{
     position: relative;
     display: inline-block;
     max-width: 430rpx;
     padding: 14rpx 17rpx 22rpx 25rpx;
     border-radius: 5rpx;
     background-color: #fff;
     line-height: 45rpx;
     font-size: 28rpx;
     color: #7c7c7c;
     margin-left: 130rpx;
 }
 .talk-wrap-own{
     background-color: #8ddfff;
     margin-right: 36rpx;
     padding: 8rpx 21rpx 13rpx 13rpx;
     text-align: left;
 }
  .talk-wrap-other::before{
    position: absolute;
    left: -24rpx;
    top: 10rpx;
    content: '';
    border-top: 8rpx solid transparent;
    border-bottom: 8rpx solid transparent;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid #fff;
 }
 .talk-wrap-own::after{
    position: absolute;
    left: 100%;
    top: 10rpx;
    content: '';
    border-top: 8rpx solid transparent;
    border-bottom: 8rpx solid transparent;
    border-left: 12rpx solid #8ddfff;
    border-right: 12rpx solid transparent;
 }
 /*自动回复内容  */
 .ask-reply{
     background: #2d3958;
     padding: 28rpx 24rpx 18rpx 20rpx;
     margin-top: 30rpx;
     font-size: 32rpx;
     position: relative;
 }
 .ask-operation{
     display: flex;
     position: absolute;
     top: 34rpx;
     right: 27rpx;
     font-size: 24rpx;
 }
 .ask-btn{
     width: 90rpx;
     height: 40rpx;
     margin-right: 20rpx;
     text-align: center;
     line-height: 40rpx;
 }
 .ask-btn:last-child{
     margin: 0;
     background: #262d49;
 }
 .ask-content{
     margin-top: 25rpx;
 }
 .foot-time{
     height: 68rpx;
     line-height: 68rpx;
     text-align: right;
     font-size: 24rpx;
     opacity: 0.5;
 }
 /*添加按钮  */
 .reply-add{
    height: 100rpx;
    width: 100%;
    position: fixed;
    background: #2d3958;
    color: #fff;
    bottom: 0;
 }
