<view id='wrap'>
    <!-- 头部信息和日期  -->
    <view class='header'>
        <text style="font-size:30rpx;align-item:center;">今日</text>\t
        <text style='color:rgba(255,255,255,0.6);'>{{time}}</text>
    </view>
    <!-- 用户提问的问题列表 -->
    <view class='content-wrap'>
        <view class='user-ask'>
            <view>
                <text>标题： </text>
                <text>工期问题</text>
                <form bindsubmit='askContentLook' report-submit id='{{index}}'>
                <button class='ask-look' form-type='submit'>
                    查看 >>
                </button>
                </form>
                
            </view>
            <view>
                <text>处理人： <text>留恋</text></text>
                <view class='ask-status ask-status'>
                    待处理
                </view>
            </view>
            
        </view>
        
    </view>
</view>
