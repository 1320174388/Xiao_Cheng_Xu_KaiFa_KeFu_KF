page{
    background: #262c49;
}
view{
    box-sizing: border-box;
}
.formIdGet{
    background: transparent;
    width: 100%;
    height: 140rpx;
    color: #fff;
    font-size: 24rpx;
    padding: 0;
    margin: 0;
    line-height: 35rpx;
}
.formIdGet::after{
    border: 0;
}
/* 头部日期信息 */
 .header{
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
    font-size: 24rpx;
    color: #fff;
    border-bottom: 1rpx solid #00163e;
 }
 /*对话框  */
 .others{
     margin-top: 70rpx;
     padding: 0 30rpx;
     position: relative;
 }
 .own{
     margin: 70rpx 0 30rpx;
     text-align: right;
     padding-right: 25rpx;
     position: relative;
 }

 .box{
     position: relative;
     display: inline-block;
     max-width: 430rpx;
     padding: 14rpx 17rpx 22rpx 25rpx;
     border-radius: 5rpx;
     background-color: #fff;
     line-height: 45rpx;
     font-size: 28rpx;
     color: #7c7c7c;
     margin-left: 30rpx;
     word-wrap: break-word;
 }
 .talk-wrap-own{
     background-color: #fff;
     margin-right: 36rpx;
     padding: 8rpx 21rpx 13rpx 13rpx;
     text-align: left;
 }
  .talk-wrap-other::before{
    position: absolute;
    left: -24rpx;
    top: 10rpx;
    content: '';
    border-top: 8rpx solid transparent;
    border-bottom: 8rpx solid transparent;
    border-left: 12rpx solid transparent;
    border-right: 12rpx solid #fff;
 }
 .talk-wrap-own::after{
    position: absolute;
    left: 100%;
    top: 10rpx;
    content: '';
    border-top: 8rpx solid transparent;
    border-bottom: 8rpx solid transparent;
    border-left: 12rpx solid #fff;
    border-right: 12rpx solid transparent;
 }