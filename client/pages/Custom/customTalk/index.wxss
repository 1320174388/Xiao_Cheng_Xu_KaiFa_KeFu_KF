.page{
  background-color: #fff;
}
.content-column{
  display: flex;  
  flex-direction: column;  
}
.content-row{  
  display: flex;  
  flex-direction: row;  
}

/* 右边用户昵称 */
.right-user{
  text-align: right;
  color: #424B50;
  font-size: 24rpx;
  padding-top: 30rpx;
  padding-right: 20rpx;
}
/* 右边聊天内容 */
.right_txt{
  word-break:break-all;
  float: right;
  max-width: 380rpx;   
  border-radius: 3px;  
  background-color: #16c7de;  
  padding: 15rpx 30rpx 15rpx 30rpx;
  font-size:30rpx;
  color: #fff;
}
/* 聊天框小三角 */
.rsanjiao {  
  width: 0px;  
  height: 0px;  
  border-width: 6px;  
  border-style: solid;
  margin-top: 8rpx;
  padding-right: 0;
  margin-right: 0;
}  
.my {  
  border-color: transparent transparent transparent #16c7de;  
}
/* 右边聊天头像 */
.right-img{
  padding-top: 30rpx;
}
.rimg{
  width: 100rpx;
  height: 100rpx;
}
/* 左边聊天头像 */
.left-img{
  padding-left: 20rpx;
  padding-top: 30rpx;
}
.limg{
  width: 100rpx;
  height: 100rpx;
}
/* 左边用户昵称 */
.left-user{
  color: #424B50;
  font-size: 24rpx;
  padding-top: 30rpx;
  padding-left: 20rpx;
}
/* 左边聊天文字 */
.left_txt{
  word-break:break-all;
  max-width: 380rpx;   
  border-radius: 3px;  
  background-color: #16c7de;  
  padding: 15rpx 30rpx 15rpx 30rpx;
  font-size:30rpx;
  color: #fff;
}
.lsanjiao{
  width: 0px;  
  height: 0px;  
  border-width: 6px;  
  border-style: solid;
  margin-top: 5rpx; 
  padding-right: 0;
  margin-right: 0;
}
.you {  
  border-color: transparent #16c7de transparent transparent;  
}
.leftTalkBorder{
  margin-top: 30rpx;
}
.rightTalkBorder{
  margin-top: 30rpx;
}
/* 输入框 */
.sendmessage {  
  background-color: white;  
  width: 100%;
  height: 300rpx;  
  position: fixed;  
  bottom: 0rpx; 
}  
  
.sendmessage textarea { 
  background-color: white; 
  font-size: 35rpx;  
  border-bottom: 1px solid #d0d0d0;  
  padding-left: 10px;
  position: fixed;
  bottom: 0;  
  padding-bottom: 20rpx;
}
.sendmessage button {  
  border: 1px solid white;  
  height: 70rpx;
  background: #16c7de;  
  color: #fff;  
  line-height: 35px;  
  font-size: 12px;
  position: fixed;
  bottom: 0;
  right: 0; 
}

