}  
/* 导航条 */
.navbar{  
  flex: none;  
  display: flex;  
  background: #16c7de; 
  color: #EDECE8; 
  position: fixed;
  width: 100%;
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 150rpx;  
}  
.navbar .item.active{  
  color: #FFF;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #FFF66D;  
}
